{
  "name": "sw-cli",
  "version": "0.1.0",
  "description": "CLI for managing and discovering reusable code templates and packages from local monorepo clones",
  "main": "dist/index.js",
  "bin": {
    "sw": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun run --watch src/cli.ts",
    "start": "bun run dist/cli.js",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cli",
    "templates",
    "packages",
    "monorepo",
    "code-reuse"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "glob": "^10.3.10",
    "ora": "^8.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}